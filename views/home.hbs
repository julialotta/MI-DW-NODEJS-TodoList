<h2>All Tasks:</h2>
<a href="/descending">Sort by newest date</a>
<a href="/ascending">Sort by oldest date</a>
<ul>
  {{#each todos}}
    <li>
      <a href="/task/{{_id}}">{{created}}
        -
        {{description}}
        <input 
    type="checkbox" 
    name="done" 
    disabled="disabled"
    value="{{done}}" 
    class="checkbox" 
  {{#if done}}checked{{/if}}>
      </a>
    </li>
  {{/each}}
  {{#unless todos}}
    <h3>Seems like you have nothing to do</h3>
  {{/unless}}
</ul>
<h3>{{error}}</h3>
<div class="create">
  <h3>Create new task:</h3>
  <form action="/newtask" method="post">
    <input
      class="taskinput"
      type="text"
      name="description"
      placeholder="description"
    />
  </form>
</div>