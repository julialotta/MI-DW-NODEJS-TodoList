<h2>Users:</h2>
<ul>
  {{#each users}}
    <li>
      <a href="/user/{{_id}}">{{user}}
      </a>
    </li>
  {{/each}}
  {{#unless users}}
    <h3>There are no users</h3>
  {{/unless}}
  <h3>{{error}}</h3>
</ul>

<h3>Create new user:</h3>
<form action="/user/newuser" method="post" class="create">
  <input type="text" name="user" />
  <input type="submit" value="Create" id="assign" />
</form>